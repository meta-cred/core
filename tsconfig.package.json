{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es2015", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@meta-cred/utils/*": ["../../packages/utils/src/*"],
      "@meta-cred/utils": ["../../packages/utils/src/index"],
      "@meta-cred/usewallet": ["../../packages/useWallet/src/index"],
      "@meta-cred/ui/*": ["../../packages/ui/src/*"],
      "@meta-cred/ui": ["../../packages/ui/src/index"]
    }
  }
}
