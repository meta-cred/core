{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es2015", "es5", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@meta-cred/utils/*": ["../utils/src/*"],
      "@meta-cred/utils": ["../utils/src"],
      "@meta-cred/usewallet/*": ["../useWallet/src/*"],
      "@meta-cred/usewallet": ["../useWallet/src/index"],
      "@meta-cred/ui/*": ["../ui/src/*"],
      "@meta-cred/ui": ["../ui/src"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  }
}
