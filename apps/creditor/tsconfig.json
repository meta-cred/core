{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/.tsbuildinfo",
    "jsx": "preserve",
    "paths": {
      "@meta-cred/utils/*": ["../../../packages/utils/src/*"],
      "@meta-cred/utils": ["../../../packages/utils/src/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next"]
}
